/* background image */
#background {
	position: fixed;
	width:100%; 
	height:100%;
	bg-decorator: image;
	bg-image: /gfx/ui/loadingscreen.tga;
	visibility: visible;
}

/* fully transparent background */
#background2 {
	position: fixed;
	width:100%; 
	height:100%;
	background:rgba(0,0,0,0);
}

#content {
	text-align:center; 
	position:fixed; 
	top:60%;
	background:rgba(0,0,0,0);
}
